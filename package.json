{
  "private": true,
  "version": "0.1.16",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "yarn": "^1.10"
  },
  "scripts": {
    "build": "sh build.sh",
    "clean": "git clean -Xdf --exclude=\"!.env\"",
    "clean:dry": "git clean -Xdn --exclude=\"!.env\"",
    "test": "oao run-script test",
    "test:ci-non-playground": "oao run-script --ignore-src 'packages/{playground,dapp-high-roller,dapp-tic-tac-toe,playground-server}' test",
    "lint": "oao run-script --parallel --ignore-errors lint",
    "lint:fix": "oao run-script --parallel --ignore-errors lint:fix",
    "run:playground": "oao run-script --no-parallel-logs --parallel --ignore-src 'packages/!(dapp-tic-tac-toe|dapp-high-roller|playground|playground-server)' start",
    "publish": "oao publish --no-confirm --increment-version-by patch",
    "postinstall": "patch-package"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "keywords": [
    "ethereum",
    "counterfactual",
    "state channels"
  ],
  "devDependencies": {
    "oao": "^1.6.0",
    "patch-package": "^6.0.4",
    "postinstall-postinstall": "^2.0.0",
    "prettier": "1.16.4",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.3.3333"
  },
  "resolutions": {
    "**/tslint-microsoft-contrib": "^6.0.0"
  }
}
